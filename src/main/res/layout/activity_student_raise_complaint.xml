<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#1E88E5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/complaintTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#111111"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Category"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#1E88E5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/complaintCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#111111"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Room Number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#1E88E5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/complaintRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#111111"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Description"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#1E88E5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/complaintDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:gravity="top"
                android:textColor="#111111"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Complaint"
            android:layout_marginTop="16dp"
            app:backgroundTint="#1E88E5"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMyComplaints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Complaints"
            android:layout_marginTop="12dp"
            app:backgroundTint="#1565C0"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogoutStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="12dp"
            app:backgroundTint="#B71C1C"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
